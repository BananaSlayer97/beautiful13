{
  "version": 2,
  "buildCommand": "echo 'Build completed'",
  "outputDirectory": ".",
  "functions": {
    "api/**/*.js": {
      "runtime": "@vercel/node@3.1.0"
    }
  },
  "rewrites": [
    {
      "source": "/api/virtues/records/([^/]+)/virtue",
      "destination": "/api/virtues/records/virtue?date=$1"
    },
    {
      "source": "/api/virtues/records/([^/]+)/reflection",
      "destination": "/api/virtues/records/reflection?date=$1"
    },
    {
      "source": "/api/(.*)",
      "destination": "/api/$1"
    },
    {
      "source": "/(.*)",
      "destination": "/index-fullstack.html"
    }
  ]
}