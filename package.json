{
  "name": "franklin-virtues-fullstack",
  "version": "1.0.0",
  "description": "富兰克林13美德养成系统 - 全栈版本",
  "main": "server/app.js",
  "scripts": {
    "start": "node server/app.js",
    "dev": "nodemon server/app.js",
    "client": "live-server --port=3000 --host=localhost",
    "server": "nodemon server/app.js",
    "build": "echo 'Build completed'",
    "deploy:dev": "./deploy.sh development",
    "deploy:prod": "./deploy.sh production",
    "docker:build": "docker build -t franklin-virtues .",
    "docker:up": "docker-compose up -d",
    "docker:down": "docker-compose down",
    "docker:logs": "docker-compose logs -f",
    "pm2:start": "pm2 start ecosystem.config.js --env production",
    "pm2:stop": "pm2 stop franklin-virtues",
    "pm2:restart": "pm2 restart franklin-virtues",
    "pm2:logs": "pm2 logs franklin-virtues"
  },
  "keywords": [
    "franklin",
    "virtues",
    "habit-tracker",
    "vue",
    "express",
    "mongodb"
  ],
  "author": "Your Name",
  "license": "MIT",
  "engines": {
    "node": "22.x"
  },
  "dependencies": {
    "express": "^4.18.2",
    "mongoose": "^7.5.0",
    "cors": "^2.8.5",
    "bcryptjs": "^2.4.3",
    "jsonwebtoken": "^9.0.2",
    "dotenv": "^16.3.1",
    "express-validator": "^7.0.1"
  },
  "devDependencies": {
    "nodemon": "^3.0.1"
  }
}